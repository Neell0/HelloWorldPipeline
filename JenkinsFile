pipeline {
    agent any

    stages {
        stage('Setup') {
            steps {
                echo 'Configuration de l\'environnement...'
                // sh 'npm install' ou sh 'pip install -r requirements.txt'
            }
        }

        stage('Build') {
            steps {
                echo 'Compilation/Execution du programme...'
                sh 'hello_world.py'
            }
        }

        stage('Test') {
            steps {
                echo 'Execution des tests unitaires...'
                // sh 'npm test' ou sh 'pytest tests/'
                sh 'echo "Ex√©cution des tests unitaires : OK"'
            }
        }
    }

    post {
        always {
            echo 'Pipeline termine.'
        }
    }
}
